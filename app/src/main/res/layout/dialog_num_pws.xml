<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:alpha="0.7"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_start_sign_num_psw" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alpha="0.7"
        android:ellipsize="end"
        android:maxLength="14"
        android:singleLine="true"
        android:text="@string/start_sign_type_pws"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/appCompatImageView5"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView5"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView5" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="40dp"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/num_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/num_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/num_3"
        app:layout_constraintStart_toEndOf="@+id/num_1"
        app:layout_constraintTop_toTopOf="@+id/num_1" />




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/num_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/num_4"
        app:layout_constraintStart_toEndOf="@+id/num_2"
        app:layout_constraintTop_toTopOf="@+id/num_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/num_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_3"
        app:layout_constraintTop_toTopOf="@+id/num_3" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_1"
            style="@style/StartSignNumText"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_2"
            style="@style/StartSignNumText"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_3"
            style="@style/StartSignNumText"
            android:text="3"  />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_4"
            style="@style/StartSignNumText"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_5"
            style="@style/StartSignNumText"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_6"
            style="@style/StartSignNumText"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_7"
            style="@style/StartSignNumText"
            android:text="7" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_8"
            style="@style/StartSignNumText"
            android:text="8" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_9"
            style="@style/StartSignNumText"
            android:text="9" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_nul"
            style="@style/StartSignNumText" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@id/input_num_0"
            style="@style/StartSignNumText"
            android:text="0" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/input_num_del"
            style="@style/StartSignNumText"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_start_sign_num_backspace"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

